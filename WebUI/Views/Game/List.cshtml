@using Domain.Entities
@model IEnumerable<Game>

@{
    ViewBag.Title = "Товары";
}

<h2>List</h2>
@foreach (var x in Model)
            {
                <div>
                    <h3>@x.Name</h3>
                    <p>@x.Description</p>
                    <h4>@x.Price.ToString("# руб")</h4>
                </div>
            }

